{
  "compilerOptions": {
    "baseUrl": "./frontend",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./frontend/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./typings"]
}
