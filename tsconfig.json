{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./frontend",
    "target": "ES2019",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./frontend/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./node_modules/@types", "./typings"
  ]
}
