<Replace>
  <!-- Enable firewall -->
  <Item>
    <Meta>
      <Format xmlns="syncml:metinf">bool</Format>
    </Meta>
    <Target>
      <LocURI>./Vendor/MSFT/Firewall/MdmStore/DomainProfile/EnableFirewall</LocURI>
    </Target>
    <Data>true</Data>
  </Item>
</Replace>
<Replace>
  <!-- Enable stealth mode -->
  <Item>
    <Meta>
      <Format xmlns="syncml:metinf">bool</Format>
    </Meta>
    <Target>
      <LocURI>./Vendor/MSFT/Firewall/MdmStore/DomainProfile/DisableStealthMode
</LocURI>
    </Target>
    <Data>true</Data>
  </Item>
</Replace>
