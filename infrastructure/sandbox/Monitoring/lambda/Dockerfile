FROM golang:1.19.11-alpine@sha256:2baefdb9fe707846cd5482f2564ad2e4961735844b223707467db08829a21401 AS builder
WORKDIR /build
COPY . .
RUN go get -d -v
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags "-extldflags '-static'"

